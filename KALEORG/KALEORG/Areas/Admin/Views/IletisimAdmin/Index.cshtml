@model List<KALEORG.Models.T_ILETISIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section role="main" class="content-body">

    <header class="page-header">
        <h2>İLETİŞİM</h2>
        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/Home/Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span>İLETİŞİM</span></li>

            </ol>
        </div>
    </header>

    <!-- start: page -->

    <div class="row" style="padding:50px 0 0 0">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <div class="pull-right">
                        <a href="/Admin/IletisimAdmin/IletisimForm" class="btn btn-success">EKLE</a>
                        @*@if (ViewBag.Ekran == "Pasif")
                        {
                            <a href="/Admin/IletisimAdmin/Index" class="btn btn-primary">Aktif İletişim Listesi</a>
                        }
                        else
                        {
                            <a href="/Admin/IletisimAdmin/PassiveList" class="btn btn-primary">Pasif İletişim Listesi</a>
                        }*@



                    </div>
                    <h2 class="card-title">İLETİŞİM</h2>
                </header>
                <div class="card-body">
                    <table class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                        <thead>
                            <tr>
                                <th>ADRES</th>
                                <th>Öncelikli Telefon</th>
                                <th>İkincil Telefon</th>
                                <th>FAKS</th>
                                <th>MAIL MUHASEBE</th>
                                <th>MAIL SATIS</th>
                                <th>MAIL INFO</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var i in Model)
                                {

                                    <tr>
                                        <td>@i.ADRES</td>
                                        <td>@i.TELEFON1</td>
                                        <td>@i.TELEFON2</td>
                                        <td>@i.FAKS</td>
                                        <td>@i.MAIL_MUHASEBE</td>
                                        <td>@i.MAIL_SATIS</td>
                                        <td>@i.MAIL_INFO</td>

                                        <td class="btn-group">
                                            @if (ViewBag.Ekran != "Pasif")
                                            {
                                                <a href="/Admin/IletisimAdmin/Update/@i.ILETISIM_ID" class="btn btn-warning btn-sm"><i class="fa fa-pencil-alt"></i> Güncelle</a>
                                            }
                                            @*@if (ViewBag.Ekran == "Pasif")
                                            {
                                                <a href="/Admin/IletisimAdmin/Active/@i.ILETISIM_ID" class="btn btn-success btn-sm"><i class="fa fa-rocket fa-fw"></i>Aktifleştir</a>
                                            }
                                            else
                                            {
                                                <a href="/Admin/IletisimAdmin/Passive/@i.ILETISIM_ID" class="btn btn-danger btn-sm"><i class="fa fa-trash fa-fw"></i>Pasifleştir</a>
                                            }*@
                                        </td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>

    <!-- end: page -->

</section>
