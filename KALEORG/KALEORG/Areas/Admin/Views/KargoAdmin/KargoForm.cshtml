@model  KALEORG.Models.T_KARGO
@{
    ViewBag.Title = "KargoForm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body card-margin">
    <header class="page-header">
        <h2>Kargo Ekle / Güncelle</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/Home/Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span><a href="/Admin/KargoAdmin/Index/">Kargo Listesi</a> </span></li>
                <li><span>Kargo Ekle / Güncelle</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    @using (Html.BeginForm("Save", "KargoAdmin", FormMethod.Post))
    {

        <div class="row" style="padding:50px 0 0 0">
            <div class="col-lg-12">
                <section class="card">
                    <header class="card-header">
                        <div class="card-actions">
                        </div>
                        <h2 class="card-title">Kargo Form</h2>

                        <p class="card-subtitle">
                            Lütfen (*) içeren alanları boş bırakmayınız.!
                        </p>
                    </header>
                    <div class="card-body">
                        <div class="row form-group">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label class="col-form-label">Firma Adı (*)</label>
                                    @Html.TextBoxFor(m => m.FIRMA_ADI, new {ViewBag.Kargo, @class = "form-control", @type = "text", @MaxLength = "50", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.FIRMA_ADI)
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">FİRMA SOZLESME NO (*)</label>
                                    @Html.TextBoxFor(m => m.SOZLESME_NO, new { @class = "form-control", @type = "text", @MaxLength = "50", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.SOZLESME_NO)
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">SUBE (*)</label>
                                    @Html.TextBoxFor(m => m.SUBE, new { @class = "form-control", @type = "text", @MaxLength = "50", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.SUBE)
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">SUBE NO(*)</label>
                                    @Html.TextBoxFor(m => m.SUBE_NO, new { @class = "form-control", @type = "text", @MaxLength = "50", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.SUBE_NO)
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="card-footer text-right">
                        @Html.HiddenFor(m => m.KARGO_FIRMA_ID)
                        <button class="btn btn-success">KAYDET</button>
                    </footer>
                </section>
            </div>
        </div>

    }
</section>

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/MaxMinLength.js"></script>

}