
@model KALEORG.Models.T_KULLANICI

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <!-- Basic -->
    <meta charset="UTF-8">


    <meta name="description" content="Porto Admin - Responsive HTML5 Template" />
    <meta name="author" content="okler.net" />
    <title>YÖNETİM PANELİ</title>
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/Areas/Admin/Content/vendor/animate/animate.css">

    <link rel="stylesheet" href="/Areas/Admin/Content/vendor/font-awesome/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="/Areas/Admin/Content/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="/Areas/Admin/Content/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <link href="/Areas/Admin/Content/toastr.min.css" rel="stylesheet" />
    <link rel="icon" href="/Areas/Admin/img/favicon.ico">
    <!-- Theme CSS -->


    <link rel="stylesheet" href="/Areas/Admin/Content/css/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="/Areas/Admin/Content/css/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="/Areas/Admin/Content/css/custom.css">

    <!-- Head Libs -->
    <script src="/Areas/Admin/Scripts/vendor/modernizr/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo float-left ">
                <img src="/Areas/Admin/img/kalepng.png" style="height:130px" alt="KLO13" />
            </a>

            <div class="panel card-sign">
                <div class="card-title-sign mt-3 text-right">
                    <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i>GİRİŞ</h2>
                </div>

                @using (Html.BeginForm("Giris", "LoginAdmin", FormMethod.Post))
                {

                    <div class="card-body">
                        <h3 class="text-center"><b>KALE ORGANİK ADMİN PANELİ</h3>
                        <span class="mt-3 mb-3 line-thru text-center text-uppercase">
                            <span>GİRİŞ</span>
                        </span>


                        <div class="form-group mb-3">
                            <label>Kulllanıcı Adı:</label>
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Kullanici_Adi, new { @class = "form-control form-control-lg" })
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="clearfix">
                                <label class="float-left">Şifre</label>
                            </div>
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control form-control-lg", @type = "password" })
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">

                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary mt-2">GİRİŞ</button>
                            </div>
                        </div>

                        <span class="mt-3 mb-3 line-thru text-center text-uppercase">
                            <span> - </span>
                        </span>


                        <p class="text-center">Erişim için lütfen Seda ÖZÇİÇEK İle iletişime geçiniz. </p>


                    </div>

                }
            </div>

            <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2020. <br />SEDA ÖZÇİÇEK</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="/Areas/Admin/Scripts/vendor/jquery/jquery.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/popper/umd/popper.min.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/common/common.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="/Areas/Admin/Scripts/vendor/jquery-placeholder/jquery-placeholder.js"></script>

    <script src="/Areas/Admin/Scripts/toastr.js"></script>
    <script src="/Areas/Admin/Scripts/toastr.min.js"></script>





    <!-- Theme Base, Components and Settings -->
    <script src="/Areas/Admin/Scripts/js/theme.js"></script>



    <!-- Theme Initialization Files -->
    <script src="/Areas/Admin/Scripts/js/theme.init.js"></script>

</body>
</html>
