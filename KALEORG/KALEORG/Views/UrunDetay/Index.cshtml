@model List<KALEORG.Models.UrunYorumMusteri_Result>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Subheader Start -->
<div class="andro_subheader pattern-bg primary-bg">
    <div class="container">
        <div class="andro_subheader-inner">
            <h1>Ürünler</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Urun/Index/0">Ürünler</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ürün Detay</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Subheader End -->
<!-- Product Content Start -->
<div class="section">
    <div class="container">

        <div class="row">
            <div class="col-lg-4 col-md-5">

                <div class="deals-slider">
                    @if (ViewBag.UrunFoto != null)
                    {
                        foreach (var i in ViewBag.UrunFoto)
                        {
                            <!-- Deal Start -->
                            <div class="andro_product">

                                <div class="andro_product-thumb">
                                    <a><img style="width: 300px;height : 330px;" src="~/img/urun/@i.FOTO" alt="product"></a>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="col-lg-4 col-md-7">

                <div class="andro_product-single-content andro_product-single-2">
                    <div class="andro_product-single-controls andro_post-share">
                        <a href="#" data-toggle="tooltip" title="Add to Wishlist" class="andro_add-to-favorite"> <i class="flaticon-like"></i> </a>
                        <ul class="andro_sm">
                            <li> <a href="https://www.instagram.com/kale_organik/?igshid=1hzbqpu4lidmg" data-toggle="tooltip" title="İnstagram Ziyaret Et"> <i class="fab fa-instagram"></i> </a></li>
                            <li> <a href="https://tr.linkedin.com/in/kale-organik-5581171a9" data-toggle="tooltip" title="LinkedIn Ziyeret Et"> <i class="fab fa-linkedin-in"></i> </a> </li>
                        </ul>
                    </div>

                    <div class="andro_rating">
                        @if (Model != null)
                        {
                            for (int i = 0; i < Model[0].ORTYILDIZ; i++)
                            {
                                <i class="fa fa-star active"></i>
                            }

                            for (int i = 0; i < 5 - Model[0].ORTYILDIZ; i++)
                            {
                                <i class="fa fa-star"></i>
                            }
                            <span>@Model[0].ORTYILDIZ Yıldız</span>
                        }
                    </div>

                    <h3> @ViewBag.searchUrun.URUN_ADI </h3>

                    <div class="andro_product-price">
                        <span>@ViewBag.searchUrun.URUN_FIYAT ₺/kg</span>
                        <span>@(Convert.ToDouble(ViewBag.searchUrun.URUN_FIYAT)* 1.10) ₺/kg</span>
                    </div>

                    <p class="andro_product-excerpt"> @ViewBag.searchUrun.ACIKLAMA</p>

                </div>
                <div class="andro_product-buttons">
                    <a href="/SiteBase/SepeteEkle/@Model[0].URUN_ID" class="andro_btn-custom primary">Sepete Ekle</a>
                    
                </div>
            </div>

            <div class="col-lg-4">

                <div class="sidebar">

                    <!-- Daily Deals Start -->
                    <div class="sidebar-widget mb-0">
                        
                        <div class="deals-slider">

                            @if (ViewBag.RandomUrun != null)
                            {
                                foreach (var i in ViewBag.RandomUrun)
                                {
                            <div class="andro_product">
                                <div class="andro_product-badge andro_badge-sale">
                                     @i.URUN_ADI Arandı
                                </div>
                                <div class="andro_product-thumb">
                                    <a href="/UrunDetay/Index/@i.URUN_ID"><img src="/img/urun/@i.FOTO" style="width: 160px;height : 180px;" alt="Resim"></a>

                                </div>
                                
                                <div class="andro_product-body">
                                    <h5 class="andro_product-title"> <a href="product-single.html">@i.URUN_ADI </a> </h5>
                                    <div class="andro_rating-wrapper">
                                        <div class="andro_rating">
                                            @if (Model != null)
                                            {
                                                for (int m = 0; m < Model[0].ORTYILDIZ; m++)
                                                {
                                                    <i class="fa fa-star active"></i>
                                                }

                                                for (int m = 0; m < 5 - Model[0].ORTYILDIZ; m++)
                                                {
                                                    <i class="fa fa-star"></i>
                                                }
                                                <span>@Model[0].ORTYILDIZ Yıldız</span>
                                            }
                                        </div>

                                    </div>
                                </div>
                                <div class="andro_product-footer">
                                    <div class="andro_product-price">
                                        <span>@ViewBag.searchUrun.URUN_FIYAT₺</span>
                                        <span>@(Convert.ToDouble(ViewBag.searchUrun.URUN_FIYAT) * 1.10)₺</span>
                                    </div>
                                    <a href="/UrunDetay/Index/@i.URUN_ID" class="andro_btn-custom btn-sm">Ürünü İncele</a>
                                </div>

                            </div>
                                }
                            }



                        </div>

                    </div>
                    <!-- Daily Deals End -->

                </div>
            </div>

        </div>

    </div>
</div>
<!-- Product Content End -->
<!-- Additional Information Start -->
<div class="modal-body">
    <div class="section pt-0">
        <div class="container">
            <div class="andro_product-additional-info">
                <div class="row">

                    <div class="col-lg-10">
                        <ul class="nav andro_sticky-section" id="bordered-tab" role="tablist">

                            <li class="nav-item">
                                <a class="andro_btn-custom primary" id="tab-product-reviews-tab" data-toggle="pill" href="#tab-product-reviews" role="tab" aria-controls="tab-product-reviews" aria-selected="false">Yorumlar</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-8">
                        <div class="tab-content" id="bordered-tabContent">

                            <div class="tab-pane fade" id="tab-product-info" role="tabpanel" aria-labelledby="tab-product-info-tab">
                                <h4>@ViewBag.searchUrun.URUN_ADI</h4>
                                @ViewBag.searchUrun.ACIKLAMA
                            </div>
                            <div class="tab-pane fade" id="tab-product-reviews" role="tabpanel" aria-labelledby="tab-product-reviews-tab">
                                <h4>Ürün Yorum</h4>
                                <!-- Review Form start -->
                                <div class="comment-form">

                                    @using (Html.BeginForm("Save", "UrunDetay", FormMethod.Post))
                                    {
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-md-6 form-group">
                                                    <input type="text" class="form-control" placeholder="Ad Soyad" name="fname" id="fname" value="">

                                                </div>
                                                <div class="col-md-6 form-group">
                                                    <input type="email" class="form-control" placeholder="Email Adres" name="email" id="email" value="">

                                                </div>
                                                <div class="col-md-12 form-group">
                                                    <input type="number" class="form-control" placeholder="Ürünümüze 1-5 arasında bir puan veriniz." name="puan" id="puan" value="">

                                                </div>
                                                <div class="col-md-12 form-group">
                                                    <textarea class="form-control" placeholder="Görüşleriniz.." name="comment" id="comment" rows="7"></textarea>

                                                </div>
                                            </div>
                                            @*Hangi ürüne yorum yaptığını burdan alıyor.*@
                                            <input type="text" class="form-control" name="urunId" id="urunId" value="@ViewBag.searchUrun.URUN_ID" hidden>

                                            <script>function myFunction() { alert("Yorum yaptığınız için teşekkürler! Yorumunuz onaylandıktan sonra yayınlanacaktır. "); }</script>
                                            <button onclick="myFunction()" type="submit" class="andro_btn-custom primary" name="button"> Gönder</button>
                                        </form>
                                    }
                                </div>
                                <!-- Review Form End -->
                                <!-- Reviews Start -->
                                <div class="comments-list">
                                    <ul>
                                        @if (Model != null)
                                        {
                                            foreach (var i in Model)
                                            {
                                                <li class="comment-item">
                                                    <img src="~/img/people/rsm.jpeg" alt="comment author">
                                                    <div class="comment-body">

                                                        <h5>@i.YORUM_AD_SOYAD </h5>

                                                        <div class="andro_rating">

                                                            @for (int j = 0; j < i.YILDIZ; j++)
                                                            {
                                                                <i class="fa fa-star active"></i>
                                                            }
                                                            @for (int k = 0; k < 5 - i.YILDIZ; k++)
                                                            {
                                                                <i class="fa fa-star"></i>
                                                            }
                                                        </div>
                                                        <span> @i.GUNCELLEME_TARIHI tarihinde yaptı.</span>
                                                        <p>@i.YORUM</p>
                                                    </div>
                                                </li>
                                            }

                                        }

                                    </ul>
                                </div>
                                <!-- Reviews End -->

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<!-- Additional Information End -->